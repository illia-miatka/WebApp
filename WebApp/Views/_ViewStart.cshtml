@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        background: url(http://www.psdgraphics.com/file/sunset-colors-pattern.png);
        margin: 0; /* Убираем отступы */
        height: 100%; /* Высота страницы */
        background-size: cover; /* Фон занимает всю доступную площадь */
        color: white;
    }

    table {
        width: 100%; /* Ширина таблицы */
        border: 4px ridge brown; /* Рамка вокруг таблицы */
        border-collapse: collapse; /* Отображать только одинарные линии */
        color: black;
    }

    th {
        text-align: center; /* Выравнивание*/
        background: #8B4513; /* Цвет фона ячеек */
        color: #FFFAFA;
        padding: 5px; /* Поля вокруг содержимого ячеек */
    }

    td {
        background: #F5DEB3; /* Цвет фона ячеек */
        text-align: center; /* Выравнивание*/
        padding: 5px; /* Поля вокруг содержимого ячеек */
    }

    pre {
        text-align: left; /* Выравнивание*/
        background: #BCD2EE; /* Цвет фона ячеек */
    }

    textarea {
        background: black
    }
</style>